{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "../../dist/docgen",
    "lib": [
      "es6",
      "dom",
      "esnext"
    ],
    "baseUrl": "."
  },
  "files": [
    "./public_api.ts",
    "./cli.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
